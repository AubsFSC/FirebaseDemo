<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SecondaryController">
    <children>
        <TextField fx:id="emailTextField" promptText="email" />
        <TextField fx:id="passwordTextField" promptText="password" />
        <HBox alignment="TOP_CENTER" prefHeight="55.0" prefWidth="518.0" spacing="20.0">
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="80.0" text="Register" />
        <Button fx:id="signinButton" mnemonicParsing="false" onAction="#signinButtonClicked" prefHeight="30.0" prefWidth="80.0" text="Sign In" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
